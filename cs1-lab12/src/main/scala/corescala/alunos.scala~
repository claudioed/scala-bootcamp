package corescala

case class Aluno(id: Int, nome: String, idade: Int, notas: List[Int], media: Option[Double])

object Alunos {
  def encontraMaiores(alunos: List[Aluno]): List[Aluno] = throw new UnsupportedOperationException("not implemented yet")

  def nomes(alunos: List[Aluno]): List[String] = throw new UnsupportedOperationException("not implemented yet")

  // na implementação da função abaixo, use as funções acima como base
  def nomesMaiores(alunos: List[Aluno]): List[String] = throw new UnsupportedOperationException("not implemented yet")


  def calculaMedias(alunos: List[Aluno]): List[Aluno] = throw new UnsupportedOperationException("not implemented yet")
  // use esta função para evitar dizimas periódicas
  def trunc(x: Double) = math.round(x * 100) * 0.01
}
